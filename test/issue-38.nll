struct Map { value: Value }
struct Value { }

let x: Map;
let y: &'_ mut Map;
let z: &'_ Value;
let t: &'_ mut &'_ mut Map;

block START {
  x = use();
  y = &'_ mut x;
  z = &'_ (*y).value;

  t = &'_ mut y; //! `(*y).value` is borrowed
  **t = use();
  use(z);
}
